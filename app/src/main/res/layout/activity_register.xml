<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.co.zoeb.zsmartaudio.Register">

    <EditText
        android:id="@+id/userid"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/registertextview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:background="@drawable/editboxstyle"
        android:ems="10"
        android:hint=" User ID [Must Be Unique]"
        android:inputType="text"
        tools:ignore="HardcodedText"
        android:textSize="20sp">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/passagain"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/pass"
        android:layout_alignStart="@+id/pass"
        android:layout_below="@+id/pass"
        android:layout_marginTop="16dp"
        android:background="@drawable/editboxstyle"
        android:ems="10"
        android:hint=" Confirm Password"
        android:inputType="textPassword"
        tools:ignore="HardcodedText"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/userid"
        android:layout_alignStart="@+id/userid"
        android:layout_below="@+id/userid"
        android:layout_marginTop="18dp"
        android:background="@drawable/editboxstyle"
        android:ems="10"
        android:hint=" Password"
        android:inputType="textPassword"
        tools:ignore="HardcodedText"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/registertextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/userid"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/userid"
        android:layout_marginTop="21dp"
        android:text="Register:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/pin"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/register2"
        android:layout_alignStart="@+id/pass"
        android:layout_below="@+id/passagain"
        android:layout_marginTop="15dp"
        android:background="@drawable/editboxstyle"
        android:ems="10"
        android:hint=" Enter Registration PIN"
        android:inputType="numberPassword"
        tools:ignore="HardcodedText"
        android:textSize="20sp" />

    <Button
        android:id="@+id/register2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passagain"
        android:layout_alignStart="@+id/passagain"
        android:layout_below="@+id/pin"
        android:layout_marginTop="33dp"
        android:background="@drawable/button_style"
        android:text="Register"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

</RelativeLayout>
